@model IEnumerable<Category>
@{
    ViewData["Title"] = "Categories";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col text-end">
            <a asp-controller="Category" asp-action="Form" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.DisplayOrder</td>
                <td>
                    <a class="btn-primary btn-sm" asp-controller="Category" asp-action="Form" asp-route-Id="@item.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                    <a class="btn-danger btn-sm" asp-controller="Category" asp-action="Delete" asp-route-Id="@item.Id"><i class="bi bi-trash"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

